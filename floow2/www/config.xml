<?xml version='1.0' encoding='utf-8'?>
<widget id="com.robhaenenfloow2.floow2" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FLOOW2</name>
    <description>  
		A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="robhaenen@floow2.com" href="http://www.floow2.com/fl2-en-mobile.html">
        FLOOW2 Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <plugin name="phonegap-plugin-push" spec="1.2.2" />
    <plugin name="org.apache.cordova.network-information" spec="1.2.1"/>
    <plugin name="cordova-plugin-camera" source="npm" spec="2.2.0"/> 
	<plugin name="org.apache.cordova.splashscreen" spec="3.2.2"/>   
	<plugin name="cordova-plugin-inappbrowser" spec="1.0.1" source="pgb" browserOnly="true"/>
	<plugin name="org.apache.cordova.device" spec="1.1.2" />
    <plugin name="org.apache.cordova.device-orientation"  spec="1.0.3"/>
    <plugin name="org.apache.cordova.dialogs" spec="1.2.1"/>
    <plugin name="org.apache.cordova.file" spec="4.2.0"/>
    <plugin name="org.apache.cordova.file-transfer" spec="1.5.1"/>
    <plugin name="org.apache.cordova.globalization" spec="1.0.3"/>   
	<plugin name="cordova-plugin-schedule" source="npm" />
   <plugin name="org.transistorsoft.cordova.plugin.background.fetch" spec="2.0.2" source="pgb" />
	
    <preference name="permissions" value="none" />
	<preference name="fullscreen" value="true" />
	<preference name="SplashScreen" value="splash"/>
    <preference name="SplashScreenDelay" value="4000" />
	<preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
	

	

    <access origin="*" />
	<access origin="facebook.com" />
  
	<icon src="icon.png" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

	<platform name="ios">
	 <allow-intent href="itms:*" />
	 <allow-intent href="itms-apps:*" />
	</platform>
	

  <icon gap:platform="windows" src="res/icon/windows-phone/icon-48.png" />
  <icon gap:platform="windows" gap:role="background" src="res/icon/windows-phone/icon-173.png" />
  <gap:splash gap:platform="windows" src="res/screen/windows-phone/screen-portrait.jpg" />
	<allow-intent href="*" />
	<allow-navigation href="*" />
    
</widget>
